{
  "name": "lambda-cdk-playground",
  "version": "0.1.0",
  "bin": {
    "lambda-cdk-playground": "bin/lambda-cdk-playground.js"
  },
  "scripts": {
    "build": "tsc && pnpm run build:lambda",
    "build:lambda": "tsc -p lambda/tsconfig.json",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "pnpm run build && cdk deploy",
    "synth": "pnpm run build && cdk synth",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "local:build": "pnpm run build:lambda",
    "local:start": "pnpm run local:build && sam local start-api --template template.yaml",
    "local:invoke": "pnpm run local:build && sam local invoke HelloWorldFunction --template template.yaml",
    "dev": "pnpm run build:lambda && ts-node scripts/dev-server.ts",
    "dev:watch": "concurrently \"pnpm run watch\" \"nodemon --exec ts-node scripts/dev-server.ts\"",
    "test:lambda": "pnpm run build:lambda && ts-node scripts/test-lambda.ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "aws-cdk": "2.1024.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.208.0",
    "constructs": "^10.0.0"
  }
}
